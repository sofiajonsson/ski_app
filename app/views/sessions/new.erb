<h1>Welcome to Slope-Side-Sales!</h1>
<% if flash[:message] %>
  <%= form_tag('/login') do %>
    <%=label_tag :user_name, "Please input your username:" %><br><br>
    <%= text_field_tag :user_name, nil, placeholder: flash[:message]  %>
    <%= submit_tag 'Login' %>
  <% end %><br>
<% else %>
<%= form_tag('/login') do %>
  <%=label_tag :user_name, "Please input your username:" %><br><br>
  <%= text_field_tag :user_name%>
  <%= submit_tag 'Login' %>
  <% end %>
<% end %><br><br>
<%= link_to "Create new user?", new_user_path %>
