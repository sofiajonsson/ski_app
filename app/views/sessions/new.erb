<h1>Welcome to Slope-Side-Sales!</h1>
<% if flash[:message] %>
  <%= form_tag('/login') do %>
    <%=label_tag :username, "Please input your username:" %><br>
    <%= text_field_tag :username, nil, placeholder: flash[:message] %><br>
    <%= label_tag :password, "Please input your password:"%><br>
    <%= password_field_tag :password, nil, placeholder: flash[:message] %><br>
    <%= submit_tag 'Login'%><br>
  <% end %>
<% else %>
<%= form_tag('/login') do %>
  <%=label_tag :username, "Please input your username:" %><br>
  <%= text_field_tag :username%><br>
  <%= label_tag :password, "Please input your password:"%><br>
  <%= password_field_tag :password%><br>
  <%= submit_tag 'Login' %><br>
  <% end %>
<% end %>
<%= link_to "Create new user?", new_user_path %>
