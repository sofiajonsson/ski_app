<h1> Create a New Comment </h1>
<%= form_for @comment do |c| %>
<%= c.label :message %>
<%= c.text_area :message %>
<%= c.label :user_id  %>
<%= c.collection_select :user_id, User.all, :id, :name %>
<%= c.label :listing_id  %>
<%= c.collection_select :listing_id ,Listing.all, :id, :title %>
<%=c.submit %>
<% end %>
